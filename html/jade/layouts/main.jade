doctype html
html
	head
		block title
			title Queen Model - Default Title
		link(rel='stylesheet', href='css/swiper.min.css')
		link(rel='stylesheet', href='css/style.css')
	body
		#fb-root
		script(type='text/javascript').
			(function(d, s, id) {
				var js, fjs = d.getElementsByTagName(s)[0];
				if (d.getElementById(id)) return;
				js = d.createElement(s); js.id = id;
				js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.5&appId=1376641262596415";
				fjs.parentNode.insertBefore(js, fjs);
			}(document, 'script', 'facebook-jssdk'));
		.container.header
			.row
				.col-md-4.col-md-offset-8
					// Lang bar
					div.language-nav
						- var lang = [{'name': 'Tiếng Việt', 'flag': 'img/en.png'}, {'name': 'English', 'flag': 'img/vi.png'}];
						p Language: 
						ul
							each val, idx in lang.length ? lang : ['There are no values']
								li
									a(href='#')
										img(src= val.flag, alt= val.name)
			.row
				.col-md-2
					a.logo(href="#")
						img(src="img/logo.png", alt="Queen Model")
				.col-md-10
					// Menu
					- var menus = [{'name': 'Trang chủ', 'link': '#'}, {'name': 'Models', 'link': 'models.html'}, {'name': 'PG/PB', 'link': 'pgpb.html'}, {'name': 'Về chúng tôi', 'link': 'aboutus.html'}, {'name': 'Tin tức', 'link': 'news.html'},  {'name': 'Tạo profile', 'link': 'createprofile.html'}, {'name': 'Liên hệ', 'link': 'contact.html'}];
					div.main-nav
						ul
							each val, idx in menus.length ? menus : ['There are no values']
								if (idx == 1) 
									li.current
										a(href=val.link)= val.name
								else
									li 
										a(href=val.link)= val.name
		block content


		.footer 
			.container
				.row
					.col-md-3
						a.logo(href="#")
							img(src="img/logo.png", alt="Queen Model")
						p Công ty TNHH Queen Model <br />Địa chỉ: 123 Nguyễn ABC, P10, Q.8<br />Hotline: 0123 8877777<br />

					.col-md-3
						h2.footer-list-url-title Dịch vụ Khách hàng
						- var foot1 = ['Tìm Model/PG/PB', 'Các câu hỏi thường gặp', 'Thông tin liên hệ']
						ul.footer-list-url
							each val, idx in foot1.length ? foot1 : ['There are no values']
								li 
									a(href="")
										i.fa.fa-chevron-circle-right
										= val
					.col-md-3
						h2.footer-list-url-title Dành cho model
						
						- var foot2 = ['Hướng dẫn đăng profile', 'Chính sách điều khoản', 'Chính sách bảo mật']
						ul.footer-list-url
							each val, idx in foot2.length ? foot2 : ['There are no values']
								li 
									a(href="")
										i.fa.fa-chevron-circle-right
										=val
					.col-md-3
						.fb-page(data-href="https://www.facebook.com/queenmodel.vn/?fref=ts" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true" data-show-posts="false")
		script(src='js/jquery.js')
		script(src='js/bootstrap.js')
		script(src='js/swiper.min.js')
		script(src='js/script.js')